@using BurgerAppDtos.Concrate

<h1>Extra Menu Ekle</h1>

@model ExtraDto

<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name">Menu Name:</label>
        <input type="text" name="Name" id="Name" class="form-control" />
    </div>

    <div>
        <label asp-for="Price">Extra Price:</label>
        <input type="number" name="Price" id="Price" class="form-control" />
    </div>

    <input class ="btn btn-primary" type="submit" value="Extra Oluştur" />
</form>