@using BurgerOrderEntity.Concrete
@using BurgerAppDtos.Concrate
<h2>Menu Listesi</h2>

@model List<MenuDto>

<form>
    <table class="table table-dark">
        <thead>
            <tr>
                <th> Menü İsmi </th>
                <th> Menu Açıklaması </th>
                <th> İşlemler </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"> Düzenle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"> Sil</a>
                    </td>


                </tr>
            }

        </tbody>

    </table>


</form>

