            <tr>
                <th> Fiyat </th>
                <th> Adres</th>
                <th> User </th>
                
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var user = usermanager.FindByIdAsync(item.AppUserId).Result;
                <tr>
                    <td>@item.TotalPrice</td>
                    <td>@item.Adress</td>
                    <td>@user.Name</td>

                    
